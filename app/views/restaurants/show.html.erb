<div class="container mt-5">
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <h2 class="card-title text-center text-primary mb-4"><%= @restaurant.name %></h2>
      <p class="card-text text-muted text-center mb-2">
        <i class="bi bi-geo-alt-fill text-danger me-2"></i><%= @restaurant.address %>
      </p>
      <p class="card-text text-center">
        <span class="badge bg-info text-dark rounded-pill px-3 py-2"><%= @restaurant.category %></span>
      </p>
    </div>
  </div>
  <div class="text-center">
    <%= link_to "Back to the List", restaurants_path, class: "btn btn-outline-primary btn-sm" %>
  </div>
      <%= link_to "write a review",  new_restaurant_review_path(@restaurant), class: "btn btn-outline-primary btn-sm" %>
<ul class="list-group">
                 <% @restaurant.reviews.each do |review| %>
                   <li class="list-group-item"><%= review.content %></li>
                 <% end %>
                   <%= link_to "Create a review", new_restaurant_review_path(@restaurant), class: "btn btn-success" %>
               </ul>
</div>
