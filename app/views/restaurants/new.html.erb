<div class="container mt-5">
  <h2 class="text-center text-primary mb-4">Creer un nouveau restaurant</h2>

  <%= simple_form_for(@restaurant) do |f| %>
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-body">
        <div class="mb-3">
          <%= f.input :name, label: "Restaurant Name", input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :address, label: "Address", input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :phone_number, label: "Phone number", input_html: { class: 'form-control' } %>
        </div>
        <div class="mb-3">
          <%= f.input :category, label: "Category", collection: Restaurant::CATEGORIES, input_html: { class: 'form-select' } %>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "Save the new restaurant", class: "btn btn-success btn-lg" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "Back to the List", restaurants_path, class: "btn btn-outline-primary btn-sm" %>
  </div>
</div>
