<div class="container mt-5">
  <h1 class="mb-5 text-center text-primary">Explore Our Restaurants</h1>

  <ul class="list-group shadow-sm">
    <% @restaurants.each do |restaurant| %>
      <li class="list-group-item d-flex justify-content-between align-items-center p-3 border-0 mb-2 rounded" style="background-color: #f8f9fa;">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark fs-5 fw-bold" %>
        <%= link_to "View Details", restaurant_path(restaurant), class: "btn btn-outline-primary btn-sm rounded-pill" %>
      </li>
    <% end %>
  </ul>

  <div class="mt-5 text-center">
    <%= link_to "Add a New Restaurant", new_restaurant_path, class: "btn btn-success btn-lg rounded-pill shadow" %>
  </div>
</div>
